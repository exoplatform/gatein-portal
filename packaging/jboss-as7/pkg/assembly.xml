<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="urn:maven:assembly:1.1.0-SNAPSHOT">
    <id>distro</id>
    <formats>
       <format>zip</format>
       <!--<format>tar.gz</format>-->
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>target/jboss</directory>
            <outputDirectory/>
            <includes>
                <include>*/**</include>
            </includes>
            <excludes>
                <exclude>**/*.sh</exclude>
                <exclude>jboss-*/domain/tmp/auth</exclude>
                <exclude>jboss-*/domain/tmp/auth</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>target/jboss</directory>
            <outputDirectory/>
            <includes>
                <include>jboss-*/**/*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/jboss</directory>
            <outputDirectory/>
            <includes>
                <include>jboss-*/domain/tmp/auth</include>
                <include>jboss-*/standalone//tmp/auth</include>
            </includes>
            <directoryMode>0700</directoryMode>
        </fileSet>
    </fileSets>
</assembly>
